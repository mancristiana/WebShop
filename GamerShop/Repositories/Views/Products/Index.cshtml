@model IEnumerable<GamerShop.Models.Product>

@{
    ViewBag.Title = "Index";
}

<div id="product-list-wrap">
    <p>@Html.ActionLink("Create New", "Create")</p>


    <div class="row">
        @foreach (var item in Model)
        {


        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
            <div class="product-wrap">
                <img src="@Html.DisplayTextFor(modelItem => item.ImgUrl)" alt="">
                @Html.DisplayFor(modelItem => item.Title)
                <h2>@Html.DisplayNameFor(model => model.Price) @Html.DisplayFor(modelItem => item.Price)</h2>
                @Html.ActionLink("View Details", "Details", new { id = item.Id }, new { @class = "info" })
            </div>
        </div>
            @*Html.ActionLink("Edit", "Edit", new { id = item.Id }) <text> | </text>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
        }
    </div>

</div>